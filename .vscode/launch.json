            "program": "${workspaceFolder}/cv/code-snippets/bin/unwarp-imgs",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/cv/code-snippets/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
